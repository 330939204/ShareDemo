<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:padding="@dimen/global_padding"
      >

    <ImageView
        android:id="@+id/user_head"
        android:layout_width="@dimen/image_head_large"
        android:layout_height="@dimen/image_head_large"
        android:contentDescription="@string/user_head"
        />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextView.Name"
        tools:text="极速奔跑蜗牛壳"
        />

    <TextView
        android:id="@+id/text_summery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextView.Info"
        tools:text="极速奔跑蜗牛壳"
        />

    <TextView
        android:id="@+id/text_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextView.Info"
        tools:text="极速奔跑蜗牛壳"
        />

  </LinearLayout>

</android.support.v7.widget.CardView>